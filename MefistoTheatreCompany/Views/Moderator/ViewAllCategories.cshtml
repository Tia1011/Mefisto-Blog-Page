@model IEnumerable<MefistoTheatreCompany.Models.Category>

@{
    ViewBag.Title = "ViewAllCategories";
}

<h2>View All Categories</h2>

<p>
    @Html.ActionLink("Create New Category", "CreateCategory")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CategoryName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryName)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditCategory", new { categoryName=item.CategoryName }) |
            @Html.ActionLink("Delete", "DeleteCategory", "Moderator",new { categoryName = item.CategoryName },null)
        </td>
    </tr>
}

</table>
